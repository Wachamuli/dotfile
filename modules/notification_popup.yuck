(defwidget notifications_widget []
  (box
    :visible {notifications != empty_array}
    :orientation "v"
    :spacing 20
    (for notification in notifications
      (notification
        :icon {notification.app_icon}
        :name {notification.app_name}
        :summary {notification.summary}
        :body {notification.body}
      )
    )
  )
)
